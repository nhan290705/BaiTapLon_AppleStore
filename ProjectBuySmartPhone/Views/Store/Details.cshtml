@model ProjectBuySmartPhone.Models.Domain.Entities.Product

@{
    ViewData["Title"] = @Model.ProductName;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ProductImages?.FirstOrDefault()?.ImageUrl ?? " /images/default.png"" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <p>@Model.Description</p>
            <p><b>Giá:</b> @Model.Price.ToString("N0") ₫</p>
            <p><b>Danh mục:</b> @Model.ProductCategory?.CategoryName</p>
            <hr />
            <form asp-area="Cart" asp-controller="Cart" asp-action="AddCart" method="post">
                <input type="hidden" name="ProductId" value="@Model.ProductId" />
                <input type="hidden" name="Quantity" value="1" /> <!-- số lượng mặc định là 1 -->
                <button type="submit" class="btn btn-dark">
                    <i class="fa-solid fa-cart-plus me-2"></i>Thêm vào giỏ hàng
                </button>
            </form>
        </div>
    </div>
</div>
