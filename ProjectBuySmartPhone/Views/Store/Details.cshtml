@model ProjectBuySmartPhone.Models.Domain.Entities.Product

@{
    ViewData["Title"] = @Model.ProductName;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ProductImages?.FirstOrDefault()?.ImageUrl ?? " /images/default.png"" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <p>@Model.Description</p>
            <p><b>Giá:</b> @Model.Price.ToString("N0") ₫</p>
            <p><b>Danh mục:</b> @Model.ProductCategory?.CategoryName</p>
            <hr />
            <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
        </div>
    </div>
</div>
