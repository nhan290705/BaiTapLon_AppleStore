@model IEnumerable<ProjectBuySmartPhone.Models.Domain.Entities.Product>
@{
    ViewData["Title"] = "Cửa hàng Apple";
    Layout = "_LayoutStore";
}

<section class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            var image = item.ProductImages.FirstOrDefault(p => p.IsMain)?.ImageUrl
            ?? item.ProductImages.FirstOrDefault()?.ImageUrl
            ?? "/images/img_store/imgProduct/default.png";

            <div class="col-6 col-md-3 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@image" class="card-img-top" alt="@item.ProductName">
                    <div class="card-body text-center">
                        <h6>@item.ProductName</h6>
                        <p class="text-danger fw-bold">@item.Price.ToString("N0") đ</p>
                        <a href="/Store/Details/@item.ProductId" class="btn btn-dark w-100">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
