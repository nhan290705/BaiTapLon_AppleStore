@* ===== _LayoutForum.cshtml ===== *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppleStore Forum</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/forum.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            background-color: #f9f9f9;
            font-family: "Segoe UI", sans-serif;
        }

        nav.navbar {
            background-color: #222;
        }

        nav a.navbar-brand,
        nav a.nav-link {
            color: #f5f5f5 !important;
        }

        footer {
            background: #222;
            color: #aaa;
            font-size: 0.9rem;
        }

            footer a {
                color: #aaa;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }

        .alert-temp {
            position: fixed;
            top: 10px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1050;
            min-width: 350px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            opacity: 0.95;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- ====== NAVBAR ====== -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/"><i class="fa-brands fa-apple"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarForum" aria-controls="navbarForum" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarForum">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Store">Cửa hàng</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/Forum">Diễn đàn</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Blog">Bài viết</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Profile"><i class="fa-solid fa-user"></i> Xin chào, @User.Identity.Name!</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Account/Logout">Đăng xuất</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Login"><i class="fa-solid fa-right-to-bracket"></i> Đăng nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ====== ALERT TEMP DATA ====== -->
    <div id="alertContainer">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center alert-temp" role="alert">
                <i class="fa fa-check-circle"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center alert-temp" role="alert">
                <i class="fa fa-exclamation-triangle"></i> @TempData["Error"]
            </div>
        }
    </div>

    <!-- ====== MAIN CONTENT ====== -->
    <main class="flex-fill mt-4 mb-5 container">
        @RenderBody()
    </main>

    <!-- ====== FOOTER ====== -->
    <footer class="text-center text-white py-3 mt-auto">
        <div class="container">
            <p class="mb-0">© 2025 AppleStore Forum - All rights reserved.</p>
            <p class="mb-0">
                <a href="/Home/Privacy">Chính sách bảo mật</a> ·
                <a href="/Contact">Liên hệ</a>
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Tự động ẩn alert sau 3 giây -->
    <script>
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-temp');
            alerts.forEach(a => {
                a.classList.add('fade');
                a.classList.remove('show');
                a.style.transition = "opacity 0.5s";
                a.style.opacity = "0";
                setTimeout(() => a.remove(), 500);
            });
        }, 3000);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
