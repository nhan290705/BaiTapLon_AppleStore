<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Apple Store</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/StorePage/styleheader.css">
    <link rel="stylesheet" href="~/css/StorePage/style.css">
    <link rel="stylesheet" href="~/css/StorePage/styleFooter.css">
    <link rel="icon" href="~/images/img_store/imgFooter/povicon-removebg-preview.png" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- ================= HEADER ================= -->
    <header>
        @Html.Partial("_PartialStoreHeader")
    </header>
    <div class="nenanhchay">
        <div class="anhChay">
            <div class="image-container">
                <div class="image-item">
                    <a href="#">
                        <img class="anhchayimg" src="~/images/anh_Chay/anh3.jpg" alt="Image 1">
                    </a>
                </div>
                <div class="image-item">
                    <a href="#">
                        <img class="anhchayimg" src="~/images/anh_Chay/anh4.jpg" alt="Image 2">
                    </a>
                </div>
                <div class="image-item">
                    <a href="#">
                        <img class="anhchayimg" src="~/images/anh_Chay/anh1.jpg" alt="Image 3">
                    </a>
                </div>
                <div class="image-item">
                    <a href="#">
                        <img class="anhchayimg" src="~/images/anh_Chay/anh2.jpg" alt="Image 4">
                    </a>
                </div>

            </div>
            <a href="javascript:void(0);" class="prev">&#10094;</a>
            <a href="javascript:void(0);" class="next">&#10095;</a>
        </div>
    </div>
    <!-- ================= MAIN ================= -->
    <main>
        @RenderBody()
    </main>

    <!-- ================= FOOTER ================= -->
    @Html.Partial("_PartialStoreFooter")

    <!-- ================= SCRIPTS ================= -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/StorePage/JSheader.js"></script>
    <script src="~/js/StorePage/script.js"></script>
    <script src="~/js/StorePage/validform.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
