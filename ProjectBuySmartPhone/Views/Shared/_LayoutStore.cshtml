<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apple Store</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/store-header.css" />
    <link rel="stylesheet" href="~/css/StorePage/store.css" />
    <link rel="icon" href="~/images/store/logo.png" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <nav>
        <div class="nav-items">
            <i class="ri-apple-fill"></i>
            <a id="Store" href="#">Cửa hàng</a>
            <a href="#">Mac</a>
            <a href="#">iPad</a>
            <a href="#">iPhone</a>
            <a href="#">Watch</a>
            <a href="#">AirPods</a>
            <a href="#">TV & Nhà</a>
            <a href="#">Giải trí</a>
            <a href="#">Phụ kiện</a>
            <a href="#">Blog</a>
            <a href="#">Hỗ trợ</a>
            <i class="ri-search-line"></i>
            <i class="ri-shopping-bag-line"></i>
            <i id="User-nav" href="#" class="ri-user-line"></
        </div>
    </nav>

    <div class="nav2">
        Thanh toán hàng tháng thật dễ dàng. Bao gồm lựa chọn lãi suất 0%.<a href="#">Tìm hiểu thêm > </a>
    </div>

    <div class="nav3">
        <div class="nav-top">
            <div class="nav-top-store">
                <div class="store1">
                    <h4>Shop</h4>
                    <a href="/Store/Index">Mua sản phẩm mới nhất</a>
                    <a href="/Store/Index">Mac</a>
                    <a href="/Store/Index">iPad</a>
                    <a href="/Store/Index">iPhone</a>
                    <a href="/Store/Index">Apple Watch</a>
                    <a href="/Store/Index">Phụ kiện</a>
                </div>
                <div class="store2">
                    <h4>Liên kết nhanh</h4>
                    <a href="#">Tình trạng đơn hàng</a>
                    <a href="#">Apple trade in</a>
                    <a href="#">Tài chính</a>
                </div>
                <div class="store3">
                    <h4>Mua tại cửa hàng đặc biệt</h4>
                    <a href="#">Giáo dục</a>
                    <a href="#">Doanh nghiệp</a>
                </div>
            </div>
        </div>
        <div class="nav-bottom"></div>
    </div>

    <div class="nav-user">
        <div class="nav-top">
            <div class="nav-top-store">
                <div class="store1">
                    <h4>Shop</h4>
                    <a href="#">Thông tin cá nhân</a>
                    <a href="#">Đơn hàng của tôi</a>
                    <a href="#">Sản phẩm yêu thích</a>
                    <a href="#">Cài đặt tài khoản</a>
                    <a href="#">Đăng xuất</a>
                </div>
                <div class="store2">
                    <h4>Liên kết nhanh</h4>
                    <a href="#">Trang cửa hàng</a>
                    <a href="#">Trung tâm hỗ trợ</a>
                </div>
                <div class="store3">
                    <h4>Mua sắm đặc biệt</h4>
                    <a href="#">Apple Trade-In</a>
                    <a href="#">Giáo dục</a>
                </div>
            </div>
        </div>
        <div class="nav-bottom"></div>
    </div>

    <div class="subnav">
        <i class="ri-close-line"></i>
        <a href="#">Store</a><a href="#">Mac</a><a href="#">iPad</a><a href="#">iPhone</a>
        <a href="#">Watch</a><a href="#">AirPods</a><a href="#">TV & Home</a>
        <a href="#">Entertainment</a><a href="#">Accessories</a><a href="#">Support</a>
    </div>

    <main>
        @RenderBody()
    </main>

    @Html.Partial("_PartialStoreFooter")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/store-nav.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
