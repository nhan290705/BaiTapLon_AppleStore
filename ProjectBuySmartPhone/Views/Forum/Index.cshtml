@model IEnumerable<ProjectBuySmartPhone.Models.Domain.Entities.Blog>

@{
    ViewData["Title"] = "Diễn đàn công nghệ";
    Layout = "~/Views/Shared/_LayoutForum.cshtml";
}

<!-- Font Awesome + Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/forum.css" />

<div class="container">
    <div class="main-body p-0">
        <div class="inner-wrapper">
            <!-- Sidebar -->
            <div class="inner-sidebar">
                <div class="inner-sidebar-header justify-content-center">
                    @if (User?.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Create" class="btn btn-primary has-icon btn-block">
                            <i class="fa fa-plus mr-2"></i> NEW DISCUSSION
                        </a>
                    }
                    else
                    {
                        <a href="/Identity/Login" class="btn btn-outline-primary has-icon btn-block">
                            <i class="fa fa-sign-in-alt mr-2"></i> Đăng nhập để đăng bài
                        </a>
                    }
                </div>

                <div class="inner-sidebar-body p-0">
                    <div class="p-3 h-100">
                        <nav class="nav nav-pills nav-gap-y-1 flex-column">
                            <a asp-action="Index"
                               asp-route-filter=""
                               class="nav-link nav-link-faded has-icon @(string.IsNullOrEmpty(ViewBag.Filter) ? "active" : "")">
                                <i class="fa fa-list mr-2"></i> All Threads
                            </a>

                            <a asp-action="Index"
                               asp-route-filter="popular"
                               class="nav-link nav-link-faded has-icon @(ViewBag.Filter == "popular" ? "active" : "")">
                                <i class="fa fa-fire mr-2"></i> Popular
                            </a>

                            <a asp-action="Index"
                               asp-route-filter="solved"
                               class="nav-link nav-link-faded has-icon @(ViewBag.Filter == "solved" ? "active" : "")">
                                <i class="fa fa-check-circle mr-2"></i> Solved
                            </a>

                            <a asp-action="Index"
                               asp-route-filter="unsolved"
                               class="nav-link nav-link-faded has-icon @(ViewBag.Filter == "unsolved" ? "active" : "")">
                                <i class="fa fa-question-circle mr-2"></i> Unsolved
                            </a>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="inner-main">
                <div class="inner-main-header d-flex align-items-center">
                    <select class="custom-select custom-select-sm w-auto mr-1">
                        <option selected>Latest</option>
                        <option>Popular</option>
                        <option>Solved</option>
                        <option>Unsolved</option>
                    </select>

                    <span class="input-icon input-icon-sm ml-auto w-auto">
                        <form method="get" asp-action="Index" class="ml-auto w-auto d-flex">
                            <input type="text"
                                   name="search"
                                   value="@ViewBag.Search"
                                   class="form-control form-control-sm bg-gray-200 border-gray-200 shadow-none"
                                   placeholder="Search forum..." />
                            <button type="submit" class="btn btn-sm btn-outline-secondary ml-1">
                                <i class="fa fa-search"></i>
                            </button>
                        </form>
                    </span>
                </div>

                <div class="inner-main-body p-2 p-sm-3 collapse forum-content show">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var post in Model.OrderByDescending(x => x.CreatedAt))
                        {
                            <div class="card mb-2">
                                <div class="card-body p-2 p-sm-3">
                                    <div class="media forum-item">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png"
                                             class="mr-3 rounded-circle" width="50" alt="User" />

                                        <div class="media-body">
                                            <h6 class="mb-1">
                                                <a asp-action="Details" asp-route-id="@post.BlogId" class="text-body font-weight-bold">
                                                    @post.Title
                                                </a>

                                                @if (post.Status == ProjectBuySmartPhone.Models.Domain.Enums.BlogStatus.Solved)
                                                {
                                                    <span class="badge badge-success ml-2">Solved</span>
                                                }
                                                else if (post.Status == ProjectBuySmartPhone.Models.Domain.Enums.BlogStatus.Unsolved)
                                                {
                                                    <span class="badge badge-warning ml-2">Unsolved</span>
                                                }
                                            </h6>

                                            <p class="text-secondary mb-1">
                                                @(post.Content?.Length > 120 ? post.Content.Substring(0, 120) + "..." : post.Content)
                                            </p>

                                            <p class="text-muted mb-0">
                                                <a href="javascript:void(0)">
                                                    @($"{post.User?.FirstName} {post.User?.LastName}".Trim())
                                                </a>
                                                đăng lúc
                                                <span class="text-secondary font-weight-bold">
                                                    @post.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                </span>
                                            </p>
                                        </div>

                                        <div class="text-muted small text-center align-self-center">
                                            <span class="d-none d-sm-inline-block">
                                                <i class="far fa-eye"></i> @((post.BlogComments?.Count() ?? 0) * 5 + 10)
                                            </span>
                                            <span>
                                                <i class="far fa-comment ml-2"></i> @(post.BlogComments?.Count() ?? 0)
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-light text-center border mt-5">
                            <i class="fa fa-info-circle"></i>
                            Chưa có bài viết nào trong diễn đàn.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
