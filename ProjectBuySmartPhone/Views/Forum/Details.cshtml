@model ProjectBuySmartPhone.Models.Domain.Entities.Blog
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_LayoutForum.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

<div class="container mt-4 mb-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">@Model.Title</h3>
                    <p class="text-muted">
                        <i class="fa fa-user mr-1"></i>
                        @($"{Model.User?.FirstName} {Model.User?.LastName}".Trim() ?? "Người dùng ẩn danh")
                        |
                        <i class="fa fa-calendar-alt mr-1"></i>
                        @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </p>

                    <hr />

                    <div class="content">
                        @Html.Raw(Model.Content?.Replace("\n", "<br />"))
                    </div>
                </div>
            </div>

            <!-- Comment Section -->
            <div class="mt-4">
                <h5 class="mb-3"><i class="fa fa-comments mr-2"></i> Bình luận (@(Model.BlogComments?.Count() ?? 0))</h5>

                @if (Model.BlogComments != null && Model.BlogComments.Any())
                {
                    foreach (var cmt in Model.BlogComments.OrderByDescending(c => c.CreatedAt))
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <div class="media">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar6.png" class="mr-3 rounded-circle" width="45" />
                                    <div class="media-body">
                                        <h6 class="mt-0 mb-1">
                                            @($"{cmt.User?.FirstName} {cmt.User?.LastName}".Trim() ?? "Người dùng")
                                        </h6>
                                        <p>@cmt.Message</p>
                                        <small class="text-muted">
                                            <i class="fa fa-clock"></i> @cmt.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-light border">
                        <i class="fa fa-info-circle"></i> Chưa có bình luận nào.
                    </div>
                }
            </div>

            <!-- Add Comment Form -->
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="mt-4">
                    <h6>Thêm bình luận của bạn</h6>
                    <form asp-action="AddComment" method="post">
                        <input type="hidden" name="BlogId" value="@Model.BlogId" />

                        <div class="form-group">
                            <textarea name="Message" class="form-control" rows="3" placeholder="Nhập bình luận..." required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-paper-plane mr-1"></i> Gửi bình luận
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-secondary mt-4">
                    <i class="fa fa-lock"></i> Vui lòng <a href="/Identity/Login">đăng nhập</a> để bình luận.
                </div>
            }

            <div class="mt-5">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa fa-arrow-left mr-1"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
