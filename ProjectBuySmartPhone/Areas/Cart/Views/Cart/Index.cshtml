@model ProjectBuySmartPhone.Models.Domain.Session.ShoppingCart
@using ProjectBuySmartPhone.Models.Domain.Enums
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    Layout = "~/Areas/Cart/Shared/_LayoutCart.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4"><i class="fa-solid fa-cart-shopping me-2"></i>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    else if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Items.Any())
    {
        <div class="text-center p-5">
            <p>Giỏ hàng của bạn hiện đang trống.</p>
            <a href="/Store/Index" class="btn btn-dark">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <form asp-action="Checkout" method="post">
            @Html.AntiForgeryToken()

            <table class="table table-bordered align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Price.ToString("N0") ₫</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity* item.Price).ToString("N0") ₫</td>
                            <td>
                                <!-- Nút xóa riêng biệt, không cần form con -->
                                <button type="submit" formaction="/Cart/Cart/RemoveCart"
                                        formmethod="post" name="productId" value="@item.ProductId"
                                        class="btn btn-outline-danger btn-sm">
                                    Xóa
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" formaction="/Cart/Cart/ClearCart" formmethod="post"
                        class="btn btn-outline-secondary">
                    Xóa tất cả
                </button>

                <h4>Tổng cộng: <span class="text-danger">@Model.TotalAmount.ToString("N0") ₫</span></h4>
            </div>

            <hr />

            <!-- FORM THANH TOÁN -->
            <h5 class="mt-4"><i class="fa-solid fa-truck me-2"></i>Thông tin thanh toán</h5>
            <div class="row mt-3">
                <div class="col-md-4">
                    <input type="text" name="RecipientName" class="form-control mb-3" placeholder="Tên người nhận" required />
                    <input type="text" name="RecipientPhone" class="form-control mb-3" placeholder="Số điện thoại" required />
                    <textarea name="ShippingAddress" class="form-control mb-3" placeholder="Địa chỉ nhận hàng" rows="2" required></textarea>
                </div>

                <div class="col-md-4">
                    <select name="PaymentMethod" class="form-select mb-3" required>
                        <option value="0">Thanh toán khi nhận hàng (COD)</option>
                        <option value="1">Chuyển khoản ngân hàng</option>
                        <option value="2">Thẻ tín dụng</option>
                        <option value="3">Ví điện tử</option>
                    </select>

                    <select name="ShippingMethod" class="form-select mb-3" required>
                        <option value="0">Giao tiêu chuẩn</option>
                        <option value="1">Giao nhanh</option>
                        <option value="2">Nhận tại cửa hàng</option>
                    </select>
                </div>

                <div class="col-md-4 d-flex align-items-end justify-content-end">
                    <button type="submit" class="btn btn-dark px-5 py-2">
                        <i class="fa-solid fa-check me-1"></i> Xác nhận đặt hàng
                    </button>
                </div>
            </div>
        </form>
    }
</div>
