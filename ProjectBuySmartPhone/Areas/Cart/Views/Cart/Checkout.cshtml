@model ProjectBuySmartPhone.Models.Domain.Session.ShoppingCart
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
    ViewData["HideTopbar"] = true;

    Layout = "~/Areas/Cart/Shared/_LayoutCart.cshtml";
}

<div class="container mt-4 mb-5">
    <h2 class="text-center mb-4">
        <i class="fa-solid fa-truck me-2"></i>@ViewData["Title"]
    </h2>

    <form asp-action="CheckoutConfirm" method="post">
        @Html.AntiForgeryToken()

        <!-- THÔNG TIN GIAO HÀNG -->
        <div class="mb-4 p-4 border rounded shadow-sm bg-light">
            <h5 class="mb-3 text-dark">
                <i class="fa-solid fa-user me-2"></i>Thông tin giao hàng
            </h5>

            <div class="row">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Tên người nhận <span class="text-danger">*</span></label>
                    <input type="text" name="RecipientName"
                           value="@ViewBag.RecipientName"
                           class="form-control mb-3"
                           placeholder="Nhập tên người nhận" required />

                    <label class="form-label fw-semibold">Số điện thoại <span class="text-danger">*</span></label>
                    <input type="text" name="RecipientPhone"
                           value="@ViewBag.RecipientPhone"
                           class="form-control mb-3"
                           placeholder="Nhập số điện thoại liên hệ" required />

                    <label class="form-label fw-semibold">Địa chỉ nhận hàng <span class="text-danger">*</span></label>
                    <textarea name="ShippingAddress"
                              class="form-control mb-3"
                              placeholder="Số nhà, tên đường, phường/xã"
                              rows="3" required></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Thành phố / Tỉnh <span class="text-danger">*</span></label>
                    <input type="text" name="City"
                           class="form-control mb-3"
                           placeholder="VD: Hà Nội" required />

                    <label class="form-label fw-semibold">Quận / Huyện <span class="text-danger">*</span></label>
                    <input type="text" name="District"
                           class="form-control mb-3"
                           placeholder="VD: Đống Đa" required />

                    <label class="form-label fw-semibold">Mã bưu điện (Postal Code)</label>
                    <input type="text" name="PostalCode"
                           value="@ViewBag.PostalCode"
                           readonly
                           class="form-control mb-3 bg-light text-secondary" />

                    <label class="form-label fw-semibold">Ghi chú đơn hàng (không bắt buộc)</label>
                    <textarea name="Note"
                              class="form-control mb-3"
                              placeholder="Ghi chú cho shipper hoặc cửa hàng"
                              rows="2"></textarea>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Phương thức thanh toán <span class="text-danger">*</span></label>
                    <select name="PaymentMethod" class="form-select mb-3" required>
                        <option value="0">Thanh toán khi nhận hàng (COD)</option>
                        <option value="1">Chuyển khoản ngân hàng</option>
                        <option value="2">Thẻ tín dụng / Ghi nợ</option>
                        <option value="3">Ví điện tử (Momo, ZaloPay,...)</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Phương thức giao hàng <span class="text-danger">*</span></label>
                    <select name="ShippingMethod" class="form-select mb-3" required>
                        <option value="0">Giao tiêu chuẩn (2–4 ngày)</option>
                        <option value="1">Giao nhanh (trong 24h)</option>
                        <option value="2">Nhận tại cửa hàng</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- DANH SÁCH SẢN PHẨM -->
        <div class="mb-4">
            <h5 class="mb-3 text-dark">
                <i class="fa-solid fa-box me-2"></i>Danh sách sản phẩm
            </h5>

            <table class="table table-bordered text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Price.ToString("N0") ₫</td>
                            <td>@item.Quantity</td>
                            <td>@((item.Price * item.Quantity).ToString("N0")) ₫</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end mt-3">
                <h4 class="fw-bold">
                    Tổng cộng:
                    <span class="text-danger">@Model.TotalAmount.ToString("N0") ₫</span>
                </h4>
            </div>
        </div>

        <!-- NÚT HÀNH ĐỘNG -->
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                <i class="fa-solid fa-arrow-left me-2"></i> Quay lại giỏ hàng
            </a>

            <button type="submit" class="btn btn-dark px-5 py-2">
                <i class="fa-solid fa-check me-2"></i> Xác nhận đặt hàng
            </button>
        </div>
    </form>
 
</div>
