@{
    ViewData["Title"] = "Đặt hàng thành công";
    Layout = "~/Areas/Cart/Shared/_LayoutCart.cshtml";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm p-5">
        <div class="mb-4">
            <i class="fa-solid fa-circle-check text-success" style="font-size: 80px;"></i>
        </div>
        <h2 class="fw-bold text-success">Đặt hàng thành công!</h2>
        <p class="text-muted mt-3">
            Cảm ơn bạn đã mua sắm tại <b>Apple Store</b>.<br />
