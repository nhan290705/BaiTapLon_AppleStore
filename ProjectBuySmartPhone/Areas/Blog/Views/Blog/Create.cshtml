@model ProjectBuySmartPhone.Models.Domain.Entities.Blog
@{
    ViewData["Title"] = "Đăng bài mới";
    Layout = "~/Areas/Blog/Shared/_LayoutBlog.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

<div class="container mt-5 mb-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fa fa-pencil-alt mr-2"></i> Đăng bài viết mới</h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="Title">Tiêu đề bài viết</label>
                    <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết..." required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Content">Nội dung</label>
                    <textarea asp-for="Content" class="form-control" rows="8" placeholder="Chia sẻ nội dung của bạn..." required></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left mr-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-paper-plane mr-1"></i> Đăng bài
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}