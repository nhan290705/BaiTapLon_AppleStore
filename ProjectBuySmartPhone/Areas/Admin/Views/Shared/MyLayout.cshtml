    <!-- Ngăn Bootstrap Select tự động khởi tạo -->
    <script>
        $(document).ready(function() {
            // Chặn bootstrap-select khởi tạo trên class no-bootstrap
            $('.no-bootstrap').each(function() {
                if ($(this).data('selectpicker')) {
                    $(this).selectpicker('destroy');
                }
            });

            // Loại bỏ các wrapper đã tạo
            $('.no-bootstrap').each(function() {
                var $select = $(this);
                var $wrapper = $select.closest('.bootstrap-select');
                if ($wrapper.length) {
                    $wrapper.replaceWith($select);
                }
            });
        });
    </script>
