@model UserLogin
@{
    ViewData["Title"] = "Đăng nhập Apple Store";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/f/fa/Apple_logo_black.svg" type="image/png">
    <style>
        body {
            margin: 0;
            font-family: "SF Pro Display", "SF Pro Text", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: #fff;
            color: #1d1d1f;
            letter-spacing: -0.2px;
        }

        header {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50px;
            border-bottom: 1px solid #e0e0e0;
        }

            header nav {
                display: flex;
                gap: 25px;
                align-items: center;
            }

                header nav a {
                    color: #1d1d1f;
                    font-size: 14px;
                    text-decoration: none;
                    font-weight: 400;
                }

                    header nav a:hover {
                        color: #0071e3;
                    }

        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-top: 80px;
        }

        .title {
            font-size: 32px;
            font-weight: 600;
            margin-bottom: 10px;
            line-height: 1.2;
        }

        .subtitle {
            font-size: 20px;
            font-weight: 500;
            margin-bottom: 40px;
            line-height: 1.2;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        input {
            width: 320px;
            height: 45px;
            border: 1px solid #ccc;
            border-radius: 30px;
            font-size: 15px;
            padding: 0 18px;
            outline: none;
            margin-bottom: 15px;
            transition: border-color 0.2s ease;
            font-family: inherit;
        }

            input:focus {
                border-color: #0071e3;
            }

        button {
            width: 320px;
            height: 45px;
            border-radius: 30px;
            border: none;
            background-color: #1d1d1f;
            color: white;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            transition: background-color 0.2s ease;
            font-family: inherit;
            margin-top: 5px;
        }

            button:hover {
                background-color: #333;
            }

        .bottom-options {
            width: 320px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: -2px;
            margin-bottom: 21px;
            font-size: 13px;
            color: #1d1d1f;
            font-weight: 400;
        }

            .bottom-options label {
                display: flex;
                align-items: center; 
                gap: 6px;
                line-height: 1; 
                cursor: pointer;
            }

            .bottom-options input[type="checkbox"] {
                width: 15px;
                height: 15px;
                accent-color: #0071e3;
                margin: 0; 
                padding: 0;
                transform: translateY(1px); 
                cursor: pointer;
            }


            .bottom-options a {
                color: #0071e3;
                text-decoration: none;
                font-weight: 400;
                transition: color 0.2s ease;
            }

                .bottom-options a:hover {
                    color: #005bb5;
                    text-decoration: underline;
                }

        .links {
            margin-top: 25px;
            font-size: 14px;
        }

            .links a {
                color: #0071e3;
                text-decoration: none;
            }

                .links a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            color: #e63946;
            font-size: 13px;
            margin-top: -10px;
            margin-bottom: 10px;
            display: block;
            animation: fadeIn 0.25s forwards;
        }

        .field-validation-valid {
            display: none;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-3px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        footer {
            text-align: center;
            font-size: 13px;
            color: #6e6e73;
            margin-top: 100px;
            border-top: 1px solid #e0e0e0;
            padding-top: 20px;
            padding-bottom: 30px;
            line-height: 1.6;
        }
    </style>

</head>

<body>


    <main>
        <div class="title">Đăng nhập để thanh toán nhanh hơn.</div>
        <div class="subtitle">Đăng nhập vào Apple Store</div>

        <form asp-action="Index" asp-controller="Login" asp-area="Identity" method="post" id="LoginForm">
            <input asp-for="Username" placeholder="Tên đăng nhập" required />
            <span asp-validation-for="Username" class="text-danger"></span>

            <input asp-for="Password" type="password" placeholder="Mật khẩu" required/>
            <span asp-validation-for="Password" class="text-danger"></span>

            <div class="bottom-options">
                <label>
                    <input type="checkbox" /> Nhớ tôi
                </label>
                <a href="#">Quên mật khẩu?</a>
            </div>

            <button type="submit">Đăng nhập</button>

            <div class="links">
                Bạn không có Tài khoản Apple?
                <a href="/Identity/Register">Tạo Tài khoản Apple</a>
            </div>
        </form>
    </main>

    <footer>
        Bạn cần hỗ trợ thêm? <a href="#" style="color:#0071e3;">Chat ngay</a> hoặc gọi 1800-1192.<br><br>
        Giá hiển thị đã bao gồm tất cả các khoản thuế. Giao hàng miễn phí cho tất cả đơn hàng.<br>
        Apple Store Trực Tuyến sử dụng công nghệ mã hóa chuẩn ngành để bảo vệ tính bảo mật của thông tin do bạn gửi.
        <a href="#" style="color:#0071e3;">Chính Sách Bảo Mật</a>.<br><br>
        Bản quyền © 2025 Apple Inc. Bảo lưu mọi quyền.<br>
        <a href="#" style="color:#0071e3;">Chính Sách Quyền Riêng Tư</a> |
        <a href="#" style="color:#0071e3;">Điều Khoản Sử Dụng</a> |
        <a href="#" style="color:#0071e3;">Bán Hàng và Hoàn Tiền</a> |
        <a href="#" style="color:#0071e3;">Pháp Lý</a> |
        <a href="#" style="color:#0071e3;">Sơ Đồ Trang Web</a><br>
        Việt Nam
    </footer>
    @if (TempData["LoginFail"] != null)
    {
        <script>
            alert(@Html.Raw(Json.Serialize(TempData["LoginFail"])));
        </script>
    }
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="/js/login.js?v=1"></script>


</body>
</html>
