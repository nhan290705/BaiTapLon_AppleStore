@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model X.PagedList.IPagedList<ProjectBuySmartPhone.Models.Domain.Entities.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
    ViewData["HideTopbar"] = true;
    Layout = "~/Areas/Cart/Shared/_LayoutCart.cshtml";
}

<div class="container mt-4">
    <div class="mb-3 text-start">
        <a class="btn btn-outline-secondary"
           asp-area="ViewHome" asp-controller="TrangChu" asp-action="Index">
            ← Quay về trang chủ
        </a>
    </div>
    <h2 class="mb-3"><i class="fa-solid fa-box me-2"></i>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <div class="text-center p-5 bg-light rounded">
            <p>Chưa có đơn hàng nào.</p>
            <a class="btn btn-dark" asp-area="ViewHome" asp-controller="TrangChu" asp-action="Index">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width:100px">Mã đơn</th>
                        <th>Người nhận</th>
                        <th>SĐT</th>
                        <th>Địa chỉ</th>
                        <th class="text-end">Tổng tiền</th>
                        <th class="text-center">Trạng thái</th>
                        <th style="width:120px" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        var statusName = o.StatusOrder?.Name ?? $"#{o.StatusOrderId}";
                        string badgeClass = o.StatusOrderId switch
                        {
                            1 => "badge bg-warning text-dark",   // Chờ xử lý
                            2 => "badge bg-info text-dark",      // Đang xử lý
                            3 => "badge bg-primary",             // Đang giao hàng
                            4 => "badge bg-success",             // Hoàn thành
                            5 => "badge bg-danger",              // Đã hủy
                            _ => "badge bg-secondary"
                        };
                        <tr>
                            <td><strong>@o.OrderId</strong></td>
                            <td>@o.RecipientName</td>
                            <td>@o.RecipientPhone</td>
                            <td>@o.ShippingAddress</td>
                            <td class="text-end">@((o.TotalPrice ?? 0).ToString("N0")) ₫</td>
                            <td class="text-center"><span class="@badgeClass">@statusName</span></td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Details" asp-route-id="@o.OrderId">
                                    Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center">
            @Html.PagedListPager(
            Model,
                page => Url.Action("MyOrders", new { page }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    UlElementClasses = new[] { "pagination", "mb-0" },
                    MaximumPageNumbersToDisplay = 5,
                    DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                    DisplayLinkToLastPage = PagedListDisplayMode.Never,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always
                })
    </div>
        }
</div>
